@page
@model ExpenseTracking.Pages.AppPages.TestsModel
@{
}
<h1>Products</h1>

<table class="table table-striped" AllowCellMerging="true">
    <thead>
        <tr>
            <th class="th-sm">#</th>
            <th class="th-sm">Product</th>
            <th class="th-sm">Quantity</th>
            <th class="th-sm">Provider</th>
        </tr>
    </thead>
    <tbody>

        @{int i = 0; }
        @foreach (var product in Model.Products)
        {
            @i= product.ProviderId;
            <tr>
                <td scope="row">@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Quantity</td>
                @if (i == product.ProviderId)
                {

                    <td class=""><button class="btn btn-primary"><i class="fa fa-address-book"></i></button></td>
                }
                else
                {

                }
            </tr>
            @i= product.ProviderId;
          }
    </tbody>
</table>

